<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="UsuÃ¡rio:"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            tools:layout_editor_absoluteX="99dp" android:id="@+id/label_usuario" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text_usuario"/>
    <TextView
            android:text="Senha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="99dp" android:id="@+id/label_senha" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/text_senha"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/text_senha" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/text_usuario" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_usuario"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_entrar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text_senha"/>
</android.support.constraint.ConstraintLayout>